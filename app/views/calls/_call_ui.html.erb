<div class="call-page">
  <div class="bg"></div>
  <div id="remote-media"></div>
  <div id="controls">
    <div id="local-media"></div>
    <div id="hud">
      <div>
        <span class="time">00:00</span>
      </div>
      <div>
        <span class="interlocutor-name"><%= Utils.email_to_name(@recipient.email) %></span>
      </div>
    </div>

    <div id="room-controls">
      <input id="room-name" type="text" placeholder="Enter a room name" value='<%= params[:room_name] %>'>
      <a class='call-button-end' id='button-end-call' title='End call'><i class="fas fa-phone-slash"></i></a>
    </div>
    <div id="log"></div>
  </div>

  <script src="//media.twiliocdn.com/sdk/js/video/v1/twilio-video.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>

</div>
