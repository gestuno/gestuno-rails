
      <%= image_tag "https://res.cloudinary.com/drgdpdviq/image/upload/v1543500513/zq7mhhcznsfkwbqqhebc.jpg", class: "img profile-avatar"%>
    
    <h3>Upload a profile picture</h3>
    <button type="button" class="btn btn-circle btn-xl-orange"><i class="fas fa-plus"></i></button>
    <div class="form">
          <%= simple_form_for @customer, as: :customer, method: :patch, url: customer_path(@customer) do |f| %>
            <%= f.input :gender, collection: ["Male", "Female", "Other"] %>
            <%= f.input :language, collection: ["Auslan", "ASL"]%>
            <%= f.input :bio, placeholder: "A few words on your work experience" %>
            <div class="btn-centered text-center">
              <%= f.button :submit, class: "btn-blue" %>
            </div>
        <% end %>
      </div>
